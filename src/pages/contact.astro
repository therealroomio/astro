---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import webLogo from "../assets/weblogo.png";
import BlurFade from "../components/magicui/blur-fade";

const address = "70 University Ave, Toronto, ON M5J 2M4";
const phone = "+1 905 391 5031";
const email = "hello@gulfbuilders.ca";
---

<Layout>
  <Navbar />
  <main class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- Contact Header -->
    <BlurFade client:load delay={0.2}>
      <div class="my-32 text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Get in Touch</h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          Have a project in mind? We'd love to hear from you. Send us a message and we'll respond as
          soon as possible.
        </p>
      </div>
    </BlurFade>

    <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-2">
      <!-- Contact Information -->
      <BlurFade client:load delay={0.4}>
        <div class="rounded-2xl bg-primary p-10 text-white">
          <Image src={webLogo} alt="Gulf Builders Logo" class="mb-8 h-16 w-auto" />
          <h2 class="mb-6 text-2xl font-semibold">Contact Information</h2>

          <div class="space-y-6">
            <BlurFade client:load delay={0.6}>
              <div class="flex items-start space-x-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="mt-1 h-6 w-6 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="font-medium">Address</p>
                  <p class="mt-1 text-white/80">{address}</p>
                </div>
              </div>
            </BlurFade>

            <BlurFade client:load delay={0.7}>
              <div class="flex items-start space-x-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="mt-1 h-6 w-6 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                <div>
                  <p class="font-medium">Phone</p>
                  <a href={`tel:${phone}`} class="mt-1 block text-white/80 hover:text-white">
                    {phone}
                  </a>
                </div>
              </div>
            </BlurFade>

            <BlurFade client:load delay={0.8}>
              <div class="flex items-start space-x-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="mt-1 h-6 w-6 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <div>
                  <p class="font-medium">Email</p>
                  <a href={`mailto:${email}`} class="mt-1 block text-white/80 hover:text-white">
                    {email}
                  </a>
                </div>
              </div>
            </BlurFade>
          </div>
        </div>
      </BlurFade>

      <!-- Contact Form -->
      <BlurFade client:load delay={0.6}>
        <div class="rounded-2xl border border-gray-200 bg-white p-8 shadow-lg lg:p-12">
          <form
            action="https://docs.google.com/forms/d/e/1FAIpQLScH_1Mhkz0h1JZbxJFHZo2QHXyAokSxLJ7RTz_DLd3qZ4Rveg/formResponse"
            method="POST"
            class="space-y-8"
          >
            <div class="space-y-6">
              <!-- Personal Information Section -->
              <div class="space-y-6">
                <h3 class="mb-4 text-lg font-medium text-gray-900">Personal Information</h3>
                <div class="grid gap-6 md:grid-cols-2">
                  <BlurFade client:load delay={0.8}>
                    <div>
                      <label for="email" class="mb-2 block text-sm font-medium text-gray-700">
                        Email <span class="text-red-500">*</span>
                      </label>
                      <input
                        type="email"
                        id="email"
                        name="emailAddress"
                        class="mt-2 block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 shadow-sm transition-colors focus:border-primary focus:bg-white focus:ring-primary"
                        required
                      />
                    </div>
                  </BlurFade>

                  <BlurFade client:load delay={0.9}>
                    <div>
                      <label for="name" class="mb-2 block text-sm font-medium text-gray-700">
                        Your Name
                      </label>
                      <input
                        type="text"
                        id="name"
                        name="entry.1204459859"
                        class="mt-2 block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 shadow-sm transition-colors focus:border-primary focus:bg-white focus:ring-primary"
                      />
                    </div>
                  </BlurFade>
                </div>

                <BlurFade client:load delay={1}>
                  <div>
                    <label for="phone" class="my-4 block text-sm font-medium text-gray-700">
                      Phone Number
                    </label>
                    <input
                      type="tel"
                      id="phone"
                      name="entry.1033622715"
                      class="mt-2 block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 shadow-sm transition-colors focus:border-primary focus:bg-white focus:ring-primary"
                    />
                  </div>
                </BlurFade>
              </div>

              <!-- Service Selection Section -->
              <div class="space-y-6 pt-6">
                <h3 class="mb-4 text-lg font-medium text-gray-900">Service Details</h3>
                <BlurFade client:load delay={1.1}>
                  <div>
                    <label for="service" class="my-4 block text-sm font-medium text-gray-700">
                      Choose Service
                    </label>
                    <select
                      id="service"
                      name="entry.1942536715"
                      class="mt-2 block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 shadow-sm transition-colors focus:border-primary focus:bg-white focus:ring-primary"
                    >
                      <option value="" disabled selected>Select a service...</option>
                      <option value="Renovation">Renovation</option>
                      <option value="Landscaping">Landscaping</option>
                      <option value="Smart Home">Smart Home</option>
                      <option value="Custom Build">Custom Build</option>
                      <option value="Bathrooms">Bathrooms</option>
                      <option value="Stairs">Stairs</option>
                      <option value="Pool">Pool</option>
                      <option value="Commercial">Commercial</option>
                      <option value="Office">Office</option>
                      <option value="Warehouse">Warehouse</option>
                      <option value="Solar">Solar</option>
                      <option value="Cabinets">Cabinets</option>
                      <option value="Kitchen">Kitchen</option>
                      <option value="Basement">Basement</option>
                      <option value="Roofing">Roofing</option>
                      <option value="HVAC">HVAC</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
                </BlurFade>

                <BlurFade client:load delay={1.2}>
                  <div>
                    <label for="details" class="my-4 block text-sm font-medium text-gray-700">
                      Are there any other important details you want to share?
                    </label>
                    <textarea
                      id="details"
                      name="entry.465983254"
                      rows="4"
                      placeholder="Tell us more about your project..."
                      class="mt-2 block w-full rounded-lg border-gray-300 bg-gray-50 px-4 py-3 text-gray-900 shadow-sm transition-colors focus:border-primary focus:bg-white focus:ring-primary"
                    ></textarea>
                  </div>
                </BlurFade>
              </div>

              <!-- Availability Section -->
              <div class="space-y-6 pt-6">
                <BlurFade client:load delay={1.3}>
                  <div>
                    <h3 class="mb-2 text-lg font-medium text-gray-900">Your Availability</h3>
                    <p class="mb-4 text-sm text-gray-500">Select all times that work for you</p>
                    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-3">
                      <div
                        class="relative flex cursor-pointer rounded-lg border border-gray-300 bg-white p-4 shadow-sm focus:outline-none"
                      >
                        <input
                          type="checkbox"
                          id="mornings"
                          name="entry.1355833096"
                          value="Mornings"
                          class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                        />
                        <label for="mornings" class="ml-3 flex flex-col">
                          <span class="block text-sm font-medium text-gray-900">Mornings</span>
                          <span class="block text-xs text-gray-500">8:00 AM - 12:00 PM</span>
                        </label>
                      </div>
                      <div
                        class="relative flex cursor-pointer rounded-lg border border-gray-300 bg-white p-4 shadow-sm focus:outline-none"
                      >
                        <input
                          type="checkbox"
                          id="afternoons"
                          name="entry.1355833096"
                          value="Afternoons"
                          class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                        />
                        <label for="afternoons" class="ml-3 flex flex-col">
                          <span class="block text-sm font-medium text-gray-900">Afternoons</span>
                          <span class="block text-xs text-gray-500">12:00 PM - 5:00 PM</span>
                        </label>
                      </div>
                      <div
                        class="relative flex cursor-pointer rounded-lg border border-gray-300 bg-white p-4 shadow-sm focus:outline-none"
                      >
                        <input
                          type="checkbox"
                          id="evenings"
                          name="entry.1355833096"
                          value="Evenings"
                          class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                        />
                        <label for="evenings" class="ml-3 flex flex-col">
                          <span class="block text-sm font-medium text-gray-900">Evenings</span>
                          <span class="block text-xs text-gray-500">5:00 PM - 9:00 PM</span>
                        </label>
                      </div>
                    </div>
                  </div>
                </BlurFade>
              </div>
            </div>

            <BlurFade client:load delay={1.4}>
              <div class="pt-6">
                <button
                  type="submit"
                  class="w-full rounded-lg bg-primary px-8 py-4 text-base font-semibold text-white shadow-md transition-all hover:bg-primary/90 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                >
                  Send Message
                </button>
              </div>
            </BlurFade>
          </form>
        </div>
      </BlurFade>
    </div>
  </main>
  <Footer />
</Layout>
