---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import { Image } from "astro:assets";
import Accordion from "../../components/ui/Accordion";

const title = "Retail Design Services in Toronto | Gulf Builders";
const description =
  "Revamp your retail space with Gulf Builders' expert retail design services. We create engaging, customer-focused designs to boost your brand's presence and sales.";
const keywords =
  "retail design Toronto, store layout design, customer experience design, Gulf Builders retail design";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Retail Design Services",
  provider: {
    "@type": "Organization",
    name: "Gulf Builders",
    address: {
      "@type": "PostalAddress",
      streetAddress: "70 University Ave",
      addressLocality: "Toronto",
      addressRegion: "ON",
      postalCode: "M5J 2M4",
      addressCountry: "CA",
    },
    telephone: "+1 (647) 123-4567",
    geo: { "@type": "GeoCoordinates", latitude: "43.6461", longitude: "-79.3802" },
    openingHoursSpecification: {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "17:00",
    },
  },
  areaServed: { "@type": "City", name: "Toronto" },
  description: description,
  serviceType: "Retail Design",
  offers: {
    "@type": "Offer",
    availability: "https://schema.org/InStock",
    priceSpecification: { "@type": "PriceSpecification", priceCurrency: "CAD" },
  },
  aggregateRating: {
    "@type": "AggregateRating",
    ratingValue: "4.8",
    reviewCount: "65",
    bestRating: "5",
    worstRating: "1",
  },
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Retail Design Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Store Layout Optimization",
          description: "Design store layouts that maximize customer flow and sales.",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Brand Experience Enhancement",
          description: "Create immersive environments that reflect your brand identity.",
        },
      },
    ],
  },
};

const teamMembers = [
  {
    name: "Sophia Martinez",
    role: "Lead Retail Designer",
    credentials: "Certified Interior Designer, Retail Specialist",
    experience: "10+ years in retail design with a focus on consumer experience",
    specialties: ["Store Layout", "Brand Experience", "Visual Merchandising"],
    icon: "M16 7a4 4 0 11-8 0",
  },
  {
    name: "Liam Johnson",
    role: "Retail Design Consultant",
    credentials: "Bachelor of Design, Retail Trends Expert",
    experience: "8+ years in designing dynamic retail spaces",
    specialties: ["Customer Journey Mapping", "Space Optimization"],
    icon: "M9 12l2 2 4-4",
  },
];

const serviceFeatures = [
  {
    title: "Engaging Store Layouts",
    description: "Optimize space to highlight key products and drive customer engagement.",
    icon: "M3 12l2-2",
  },
  {
    title: "Brand-Centric Design",
    description: "Ensure your store design reflects your brand identity and values.",
    icon: "M16 7a4 4 0 11-8 0",
  },
  {
    title: "Visual Merchandising",
    description: "Create impactful displays that attract and retain customer attention.",
    icon: "M9 12l2 2",
  },
  {
    title: "Innovative Lighting",
    description: "Utilize lighting to enhance product features and create inviting atmospheres.",
    icon: "M5 10v10a1 1 0 001 1h3",
  },
];

const processSteps = [
  {
    step: "01",
    title: "Initial Consultation",
    description: "Discuss your brand and vision to tailor a unique retail experience.",
    icon: "M8 12h.01",
  },
  {
    step: "02",
    title: "Concept Development",
    description: "Develop creative concepts and store layouts that align with your goals.",
    icon: "M4 16l4.586-4.586",
  },
  {
    step: "03",
    title: "Design Finalization",
    description: "Refine the design details and finalize all elements for your store.",
    icon: "M7 21a4 4 0 01-4-4",
  },
  {
    step: "04",
    title: "Implementation",
    description: "Seamless execution from construction to finishing touches.",
    icon: "M9 12l2 2 4-4",
  },
];

const testimonials = [
  {
    quote:
      "Our new store layout has significantly boosted customer engagement and sales. Gulf Builders exceeded our expectations!",
    author: "Olivia Brown",
    role: "Retail Manager, Fashion Hub",
    project: "Store Revamp",
    projectDetails: "Complete retail overhaul",
    location: "Toronto",
    rating: 5,
    date: "2023",
  },
  {
    quote:
      "The design team brought our brand to life, creating an immersive shopping experience that our customers love.",
    author: "Ethan Wilson",
    role: "Owner, Everyday Essentials",
    project: "Brand Experience Redesign",
    projectDetails: "Innovative retail space redesign",
    location: "Toronto",
    rating: 5,
    date: "2023",
  },
];

const faqs = [
  {
    question: "What is the process for retail design?",
    answer:
      "Our process starts with an initial consultation, followed by concept development, design finalization, and seamless implementation.",
  },
  {
    question: "How do you ensure the design reflects our brand?",
    answer:
      "By conducting in-depth consultations and collaborative workshops to fully understand your brand identity and goals.",
  },
  {
    question: "Can retail design improve sales?",
    answer:
      "Absolutely. A well-thought-out retail design can boost customer engagement and significantly increase sales.",
  },
];
---

<Layout>
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/retail-design-hero.jpg" />
    <meta name="twitter:card" content="summary_large_image" />

    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <meta name="author" content="Gulf Builders" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://gulfbuilders.ca/services/retail-design" />

    <meta name="theme-color" content="#ffffff" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  </head>

  <Navbar />
  <main class="relative" role="main" aria-labelledby="main-heading">
    <section
      class="relative overflow-hidden bg-white py-32 sm:py-40"
      aria-labelledby="hero-heading"
    >
      <BlurFade client:load delay={0.2}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="grid min-h-[70vh] gap-12 lg:grid-cols-2 lg:gap-8">
            <div class="flex flex-col justify-center">
              <h1
                id="main-heading"
                class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"
              >
                Transform Your Retail Space
              </h1>
              <p class="mt-6 text-lg leading-8 text-gray-600">
                Elevate your store with innovative retail designs tailored to your brand and
                customer experience.
              </p>
              <div class="mt-8 flex gap-4">
                <a
                  href="#contact"
                  class="rounded-xl bg-primary px-8 py-4 text-base font-semibold text-white shadow-sm hover:bg-primary/90"
                >
                  Get Started
                </a>
                <a
                  href="#process"
                  class="rounded-xl bg-gray-50 px-8 py-4 text-base font-semibold text-gray-900 shadow-sm hover:bg-gray-100"
                >
                  Learn More
                </a>
              </div>
            </div>
            <div class="relative flex items-center">
              <div class="aspect-[4/3] overflow-hidden rounded-2xl bg-gray-50">
                <img
                  src="/images/retail-design-hero.jpg"
                  alt="Retail design showcase"
                  class="h-full w-full object-cover"
                  width="800"
                  height="600"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <section class="bg-gray-50 py-24 sm:py-32">
      <BlurFade client:load delay={0.3}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Innovative Retail Solutions
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Our retail design services focus on creating dynamic, engaging spaces that drive sales
              and enhance brand image.
            </p>
          </div>
          <div class="mt-16 grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
            {
              serviceFeatures.map((feature, index) => (
                <BlurFade client:load delay={0.4 + index * 0.1}>
                  <div class="relative">
                    <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10">
                      <svg
                        class="h-6 w-6 text-primary"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d={feature.icon}
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">{feature.title}</h3>
                    <p class="mt-2 text-base text-gray-600">{feature.description}</p>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <section id="process" class="relative bg-white py-24 sm:py-32">
      <div class="absolute inset-0 -z-10">
        <div class="absolute inset-y-0 left-0 -z-10 w-full overflow-hidden bg-gray-50">
          <div class="absolute -left-[40%] top-0 h-[1000px] w-[80%] -rotate-12 bg-white"></div>
        </div>
      </div>

      <BlurFade client:load delay={0.4}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              Our Retail Process
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              From concept to completion, our process is designed to deliver excellence in every
              detail.
            </p>
          </div>

          <div class="mt-16 lg:mt-24">
            <div class="relative">
              <div
                class="absolute left-1/2 top-0 hidden h-full w-0.5 -translate-x-1/2 bg-gray-200 lg:block"
              >
              </div>

              <div class="space-y-16 lg:space-y-32">
                {
                  processSteps.map((step, index) => (
                    <BlurFade client:load delay={0.5 + index * 0.1}>
                      <div
                        class={`relative flex flex-col gap-8 lg:flex-row ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}
                      >
                        <div class="absolute left-1/2 top-0 hidden h-6 w-6 -translate-x-1/2 lg:block">
                          <div class="h-full w-full rounded-full border-4 border-white bg-primary shadow-lg" />
                        </div>

                        <div class="flex-1 lg:w-1/2">
                          <div class="group relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 transition-all hover:shadow-lg">
                            <div class="mb-6 flex items-center gap-4">
                              <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary text-xl font-bold text-white shadow-sm">
                                {step.step}
                              </div>
                              <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
                                <svg
                                  class="h-6 w-6 text-primary"
                                  fill="none"
                                  viewBox="0 0 24 24"
                                  stroke="currentColor"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d={step.icon}
                                  />
                                </svg>
                              </div>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900">{step.title}</h3>
                            <p class="mt-2 text-base leading-relaxed text-gray-600">
                              {step.description}
                            </p>
                            <div class="absolute right-8 top-8 text-primary opacity-0 transition-opacity group-hover:opacity-100">
                              <svg
                                class="h-6 w-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                                />
                              </svg>
                            </div>
                          </div>
                        </div>

                        <div class="hidden lg:block lg:w-1/2" />
                      </div>
                    </BlurFade>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <section class="bg-white py-24 sm:py-32" aria-labelledby="testimonials-heading">
      <BlurFade client:load delay={0.6}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              id="testimonials-heading"
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              What Our Clients Say
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Hear from businesses that transformed their retail spaces with our expertise.
            </p>
          </div>

          <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-2">
            {
              testimonials.map((testimonial, index) => (
                <BlurFade client:load delay={0.7 + index * 0.1}>
                  <div class="relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5">
                    <div
                      class="mb-4 flex text-primary"
                      role="img"
                      aria-label={`${testimonial.rating} out of 5 stars`}
                    >
                      {Array.from({ length: testimonial.rating }).map((_, i) => (
                        <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20" aria-hidden="true">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>

                    <blockquote class="mb-6 text-base italic text-gray-600">
                      "{testimonial.quote}"
                    </blockquote>

                    <div class="mt-4">
                      <p class="font-semibold text-gray-900">{testimonial.author}</p>
                      <p class="text-sm text-gray-600">{testimonial.role}</p>
                      <p class="mt-1 text-sm font-medium text-primary">{testimonial.project}</p>
                      <div class="mt-2 flex flex-wrap gap-2">
                        <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                          {testimonial.projectDetails}
                        </span>
                        <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                          {testimonial.location}
                        </span>
                        <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                          {testimonial.date}
                        </span>
                      </div>
                    </div>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <section id="contact" class="bg-white py-24 sm:py-32">
      <BlurFade client:load delay={0.8}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="relative mx-auto max-w-2xl rounded-3xl bg-primary px-8 py-16 text-center">
            <div
              class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top_right,_#60a5fa,_transparent_40%),radial-gradient(circle_at_bottom_left,_#1e40af,_transparent_40%)] opacity-20"
            >
            </div>
            <h2 class="text-2xl font-semibold text-white">Ready to Transform Your Retail Space?</h2>
            <p class="mt-4 text-lg text-white/80">
              Contact Gulf Builders today for a free consultation on retail design.
            </p>
            <div class="mt-8 flex justify-center gap-4">
              <a
                href="/contact"
                class="rounded-xl bg-white px-8 py-4 text-base font-semibold text-primary shadow-sm"
              >
                Schedule Consultation
              </a>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  .float-animation {
    animation: float 6s ease-in-out infinite;
  }
</style>
