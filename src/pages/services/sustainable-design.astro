---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import { Image } from "astro:assets";
import Accordion from "../../components/ui/Accordion";

const serviceName = "Sustainable Design";

const title = `Professional ${serviceName} Services in Toronto | Gulf Builders`;
const description = `Eco-friendly solutions and sustainable materials for environmentally conscious living.`;
const keywords = `sustainable design, eco-friendly design, Gulf Builders sustainable design`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: `${serviceName} Services`,
  provider: {
    "@type": "Organization",
    name: "Gulf Builders",
    address: {
      "@type": "PostalAddress",
      streetAddress: "70 University Ave",
      addressLocality: "Toronto",
      addressRegion: "ON",
      postalCode: "M5J 2M4",
      addressCountry: "CA",
    },
    telephone: "+1 (647) 123-4567",
    geo: {
      "@type": "GeoCoordinates",
      latitude: "43.6461",
      longitude: "-79.3802",
    },
    openingHoursSpecification: {
      "@type": "OpeningHoursSpecification",
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "17:00",
    },
  },
  areaServed: {
    "@type": "City",
    name: "Toronto",
  },
  description: description,
  serviceType: serviceName,
  offers: {
    "@type": "Offer",
    availability: "https://schema.org/InStock",
    priceSpecification: {
      "@type": "PriceSpecification",
      priceCurrency: "CAD",
    },
  },
  aggregateRating: {
    "@type": "AggregateRating",
    ratingValue: "4.9",
    reviewCount: "87",
    bestRating: "5",
    worstRating: "1",
  },
};

const teamMembers = [
  {
    name: "Reza Baradar",
    role: "Sustainable Design Lead",
    credentials: "LEED AP, HERS Certified",
    experience: "18+ years in sustainable architecture and eco-friendly design",
    specialties: [
      "Passive Design Strategies",
      "Eco-friendly Materials",
      "Green Building Certification",
    ],
    icon: "M12 12l4 4m0-4l-4 4",
  },
  {
    name: "Sajjad Mohammadi",
    role: "Eco Design Specialist",
    credentials: "Certified Sustainable Designer, LEED Accredited",
    experience: "15+ years of experience in integrating eco-friendly design solutions",
    specialties: [
      "Energy Efficiency Optimization",
      "Sustainable Renovation",
      "Material Innovation",
    ],
    icon: "M8 12h8m-4-4v8",
  },
];

const serviceFeatures = [
  {
    title: "Eco-Friendly Materials",
    description:
      "Utilization of sustainable, recycled, and low-impact materials to reduce environmental footprint.",
    icon: "M3 12l2-2m0 0l7-7 7 7",
  },
  {
    title: "Energy Efficiency Optimization",
    description: "Design strategies that maximize energy performance and reduce utility costs.",
    icon: "M5 12h14",
  },
  {
    title: "Green Building Certification",
    description:
      "Guidance and support for obtaining certifications like LEED and other green building ratings.",
    icon: "M12 8v8",
  },
  {
    title: "Waste Reduction Systems",
    description: "Innovative approaches to minimize construction waste and promote recycling.",
    icon: "M9 12l2 2 4-4",
  },
];

const processSteps = [
  {
    step: "01",
    title: "Initial Sustainability Consultation",
    description: "Assess environmental goals and evaluate current building performance.",
    icon: "M9 5H7a2 2 0 00-2 2v12",
  },
  {
    step: "02",
    title: "Design & Material Selection",
    description: "Collaborate on selecting eco-friendly materials and innovative design solutions.",
    icon: "M12 6v6",
  },
  {
    step: "03",
    title: "Green Strategy Implementation",
    description:
      "Integrate energy-efficient designs and sustainable practices throughout the project.",
    icon: "M5 12h14",
  },
  {
    step: "04",
    title: "Performance Monitoring",
    description: "Continuous monitoring and optimization to ensure energy-saving goals are met.",
    icon: "M12 8v8",
  },
];

const testimonials = [
  {
    quote:
      "Gulf Builders transformed our outdated home into an eco-friendly masterpiece, blending modern design with sustainable solutions. Their expertise in green building truly stands out.",
    author: "Mohammad Farid",
    role: "Homeowner",
    project: "Eco Residential Renovation",
    projectDetails: "Green remodel of a single-family home",
    location: "Yorkville, Toronto",
    rating: 5,
    date: "2023",
  },
  {
    quote:
      "The sustainable design team provided innovative solutions that significantly reduced our energy bills while enhancing the aesthetic appeal of our space.",
    author: "Ahmad Safi",
    role: "Property Investor",
    project: "Commercial Eco-Renovation",
    projectDetails: "Energy-efficient upgrade of an office building",
    location: "Financial District, Toronto",
    rating: 5,
    date: "2023",
  },
];

const faqs = [
  {
    question: "What sustainable materials do you use?",
    answer:
      "We use a variety of eco-friendly materials such as recycled steel, reclaimed wood, low-VOC paints, and energy-efficient insulation options.\n\nOur selections are based on environmental impact and performance efficiency.",
  },
  {
    question: "How do you ensure energy efficiency?",
    answer:
      "Our designs incorporate natural lighting, advanced insulation, energy-efficient windows, and renewable energy integration, all tailored to maximize performance.",
  },
  {
    question: "Can you help with green building certifications?",
    answer:
      "Yes, we provide consultancy and documentation support to help you achieve certifications like LEED, WELL, and other green building ratings.",
  },
];
---

<Layout {title} {description} {structuredData}>
  <Navbar />
  <main class="relative" role="main" aria-labelledby="main-heading">
    <!-- Hero Section -->
    <section
      class="relative overflow-hidden bg-white py-32 sm:py-40"
      aria-labelledby="hero-heading"
    >
      <BlurFade client:load delay={0.2}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="grid min-h-[70vh] gap-12 lg:grid-cols-2 lg:gap-8">
            <div class="flex flex-col justify-center">
              <h1
                id="main-heading"
                class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"
              >
                Sustainable Design Excellence
              </h1>
              <p class="mt-6 text-lg leading-8 text-gray-600">
                Embrace eco-friendly innovation with Gulf Builders' sustainable design services,
                creating spaces that are both efficient and inspiring.
              </p>
              <div class="mt-8 flex gap-4">
                <a
                  href="#contact"
                  class="rounded-xl bg-primary px-8 py-4 text-base font-semibold text-white shadow-sm hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                >
                  Start Your Project
                </a>
                <a
                  href="#process"
                  class="rounded-xl bg-gray-50 px-8 py-4 text-base font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300"
                >
                  Learn More
                </a>
              </div>
            </div>
            <div class="relative flex items-center">
              <div class="aspect-[4/3] overflow-hidden rounded-2xl bg-gray-50">
                <img
                  src="/images/sustainable-design-hero.jpg"
                  alt="Sustainable design showcase"
                  class="h-full w-full object-cover"
                  width="800"
                  height="600"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-50 py-24 sm:py-32">
      <BlurFade client:load delay={0.3}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Comprehensive Sustainable Solutions
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Our approach integrates eco-friendly materials and energy-efficient designs for a
              greener future.
            </p>
          </div>
          <div class="mt-16 grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
            {
              serviceFeatures.map((feature, index) => (
                <BlurFade client:load delay={0.4 + index * 0.1}>
                  <div class="relative">
                    <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10">
                      <svg
                        class="h-6 w-6 text-primary"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d={feature.icon}
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">{feature.title}</h3>
                    <p class="mt-2 text-base text-gray-600">{feature.description}</p>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Process Section -->
    <section id="process" class="relative bg-white py-24 sm:py-32">
      <div class="absolute inset-0 -z-10">
        <div class="absolute inset-y-0 left-0 -z-10 w-full overflow-hidden bg-gray-50">
          <div class="absolute -left-[40%] top-0 h-[1000px] w-[80%] -rotate-12 bg-white"></div>
        </div>
      </div>
      <BlurFade client:load delay={0.4}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              Our Sustainable Process
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Follow our step-by-step approach to create eco-friendly and efficient design
              solutions.
            </p>
          </div>
          <div class="mt-16 lg:mt-24">
            <div class="relative">
              <div
                class="absolute left-1/2 top-0 hidden h-full w-0.5 -translate-x-1/2 bg-gray-200 lg:block"
              >
              </div>
              <div class="space-y-16 lg:space-y-32">
                {
                  processSteps.map((step, index) => (
                    <BlurFade client:load delay={0.5 + index * 0.1}>
                      <div
                        class={`relative flex flex-col gap-8 lg:flex-row ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}
                      >
                        <div class="absolute left-1/2 top-0 hidden h-6 w-6 -translate-x-1/2 lg:block">
                          <div class="h-full w-full rounded-full border-4 border-white bg-primary shadow-lg" />
                        </div>
                        <div class="flex-1 lg:w-1/2">
                          <div class="group relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 transition-all hover:shadow-lg">
                            <div class="mb-6 flex items-center gap-4">
                              <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary text-xl font-bold text-white shadow-sm">
                                {step.step}
                              </div>
                              <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
                                <svg
                                  class="h-6 w-6 text-primary"
                                  fill="none"
                                  viewBox="0 0 24 24"
                                  stroke="currentColor"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d={step.icon}
                                  />
                                </svg>
                              </div>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900">{step.title}</h3>
                            <p class="mt-2 text-base leading-relaxed text-gray-600">
                              {step.description}
                            </p>
                            <div class="absolute right-8 top-8 text-primary opacity-0 transition-opacity group-hover:opacity-100">
                              <svg
                                class="h-6 w-6"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                                />
                              </svg>
                            </div>
                          </div>
                        </div>
                        <div class="hidden lg:block lg:w-1/2" />
                      </div>
                    </BlurFade>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Testimonials Section -->
    <section class="bg-white py-24 sm:py-32" aria-labelledby="testimonials-heading">
      <BlurFade client:load delay={0.6}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              id="testimonials-heading"
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              What Our Clients Say
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Read about real experiences from our satisfied clients in creating sustainable and
              innovative spaces.
            </p>
          </div>
          <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {
              testimonials.map((testimonial, index) => (
                <BlurFade client:load delay={0.7 + index * 0.1}>
                  <div class="relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5">
                    <div
                      class="mb-4 flex text-primary"
                      role="img"
                      aria-label={`${testimonial.rating} out of 5 stars`}
                    >
                      {Array.from({ length: testimonial.rating }).map(() => (
                        <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20" aria-hidden="true">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <blockquote class="mb-6 text-base italic text-gray-600">
                      "{testimonial.quote}"
                    </blockquote>
                    <div class="mt-4">
                      <p class="font-semibold text-gray-900">{testimonial.author}</p>
                      <p class="text-sm text-gray-600">{testimonial.role}</p>
                      <p class="mt-1 text-sm font-medium text-primary">{testimonial.project}</p>
                      <div class="mt-2 flex flex-wrap gap-2">
                        <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                          {testimonial.projectDetails}
                        </span>
                        <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                          {testimonial.location}
                        </span>
                        <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                          {testimonial.date}
                        </span>
                      </div>
                    </div>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Team Section -->
    <section class="bg-gray-50 py-24 sm:py-32">
      <BlurFade client:load delay={0.6}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              Meet Our Sustainable Design Experts
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Our team of experts is dedicated to designing eco-friendly and energy-efficient
              spaces.
            </p>
          </div>
          <div class="mt-16 grid gap-8 sm:grid-cols-2">
            {
              teamMembers.map((member, index) => (
                <BlurFade client:load delay={0.7 + index * 0.1}>
                  <div class="group relative overflow-hidden rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 transition-all hover:shadow-lg">
                    <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top_right,_theme(colors.primary.50),_transparent_40%)] opacity-0 transition-opacity group-hover:opacity-100" />
                    <div class="flex items-start gap-4">
                      <div class="flex h-16 w-16 flex-shrink-0 items-center justify-center rounded-xl bg-primary/10">
                        <svg
                          class="h-8 w-8 text-primary"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d={member.icon}
                          />
                        </svg>
                      </div>
                      <div class="flex-1">
                        <h3 class="text-xl font-semibold text-gray-900">{member.name}</h3>
                        <p class="mt-1 text-sm font-medium text-primary">{member.role}</p>
                        <p class="mt-2 text-sm text-gray-600">{member.credentials}</p>
                        <p class="mt-1 text-sm text-gray-600">{member.experience}</p>
                        <div class="mt-4 flex flex-wrap gap-2">
                          {member.specialties.map((specialty) => (
                            <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                              {specialty}
                            </span>
                          ))}
                        </div>
                      </div>
                    </div>
                    <div class="absolute right-8 top-8 text-primary opacity-0 transition-opacity group-hover:opacity-100">
                      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </div>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- CTA Section -->
    <section id="contact" class="bg-white py-24 sm:py-32">
      <BlurFade client:load delay={0.8}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="relative mx-auto max-w-2xl rounded-3xl bg-primary px-8 py-16 text-center">
            <div
              class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top_right,_theme(colors.primary.400),_transparent_40%),radial-gradient(circle_at_bottom_left,_theme(colors.primary.800),_transparent_40%)] opacity-20"
            >
            </div>
            <h2 class="text-2xl font-semibold text-white">Ready to Transform Your Space?</h2>
            <p class="mt-4 text-lg text-white/80">
              Contact us today for a free consultation and let's create a sustainable future
              together.
            </p>
            <div class="mt-8 flex justify-center gap-4">
              <a
                href="/contact"
                class="rounded-xl bg-white px-8 py-4 text-base font-semibold text-primary shadow-sm transition-colors hover:bg-white/90 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary"
              >
                Schedule Consultation
              </a>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  .float-animation {
    animation: float 6s ease-in-out infinite;
  }
</style>
