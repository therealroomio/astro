---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import Accordion from "../../components/ui/Accordion";

// SEO metadata optimized for painting services
const title = "Professional Painting Services | Gulf Builders";
const description =
  "Gulf Builders provides expert interior and exterior painting services with premium materials and meticulous preparation. Our skilled painters deliver flawless finishes for residential and commercial properties.";
const keywords =
  "painting services, interior painting, exterior painting, house painters, commercial painting, Toronto painters, residential painting, premium paint finishes";

// Enhanced structured data with more details
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Professional Painting Services",
  provider: {
    "@type": "Organization",
    name: "Gulf Builders",
    address: {
      "@type": "PostalAddress",
      streetAddress: "70 University Ave",
      addressLocality: "Toronto",
      addressRegion: "ON",
      postalCode: "M5J 2M4",
      addressCountry: "CA",
    },
    telephone: "+1 (647) 123-4567",
  },
  description: description,
  serviceType: "Painting",
};

// Team members for authority and trust signals
const teamMembers = [
  {
    name: "Michael Torres",
    role: "Lead Painting Specialist",
    credentials: "Master Painter Certification",
    experience: "15+ years of experience in residential and commercial painting applications",
    specialties: ["Interior Finishes", "Exterior Durability", "Specialty Techniques"],
