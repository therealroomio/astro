            {faqs.map((faq, index) => (
              <BlurFade client:load delay={0.8 + index * 0.1}>
                <Accordion client:load title={faq.question}>
                  <div class="text-base leading-relaxed text-gray-600">
                    {faq.answer.split('\n\n').map((paragraph) => (
                      <div class="mb-4 last:mb-0">
                        {paragraph.startsWith('- ') ? (
                          <ul class="list-disc space-y-2 pl-4">
                            {paragraph.split('\n').map((item) => (
                              <li>{item.replace('- ', '')}</li>
                            ))}
                          </ul>
                        ) : paragraph.match(/^\d\./) ? (
                          <ol class="list-decimal space-y-2 pl-4">
                            {paragraph.split('\n').map((item) => (
                              <li>{item.replace(/^\d\.\s/, '')}</li>
                            ))}
                          </ol>
                        ) : (
                          <p>{paragraph}</p>
                        )}
                      </div>
                    ))}
                  </div>
                </Accordion>
              </BlurFade>
            ))}
          </div>
    </div>
      </BlurFade>
