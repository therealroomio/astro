---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import Accordion from "../../components/ui/Accordion";

// SEO metadata optimized for interior finishes services
const title = "Premium Interior Finishing Services | Gulf Builders";
const description =
  "Gulf Builders provides expert installation of tiling, wood laminate, engineered hardwood, and other premium interior finishes. Transform your space with high-quality materials and professional craftsmanship.";
const keywords =
  "interior finishes, flooring installation, tile installation, hardwood flooring, engineered hardwood, laminate flooring, luxury vinyl tile, Toronto interior finishing, premium flooring";

// Enhanced structured data with more details
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Premium Interior Finishing Services",
  provider: {
    "@type": "Organization",
    name: "Gulf Builders",
    address: {
      "@type": "PostalAddress",
      streetAddress: "70 University Ave",
      addressLocality: "Toronto",
