---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import Accordion from "../../components/ui/Accordion";

// SEO metadata optimized for renovation services
const title = "Expert Home Renovation Services | Gulf Builders";
const description =
  "Gulf Builders delivers premium home renovation services for kitchens, bathrooms, basements, and whole-home transformations. Our experienced team handles projects from design to completion with quality craftsmanship and exceptional attention to detail.";
const keywords =
  "home renovations, kitchen remodeling, bathroom renovation, basement finishing, home remodeling, Toronto renovations, residential renovations, whole home renovation";

// Enhanced structured data with more details
const structuredData = {
