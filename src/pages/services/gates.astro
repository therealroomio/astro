---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import Accordion from "../../components/ui/Accordion";

// SEO metadata optimized for gate services
const title = "Custom Gate Design & Installation | Gulf Builders";
const description =
  "Gulf Builders designs and installs custom gates that enhance security, privacy, and curb appeal for residential and commercial properties. Choose from a variety of materials, styles, and automation options.";
const keywords =
  "custom gates, gate installation, driveway gates, security gates, automated gates, garden gates, Toronto gate contractor, residential gates, commercial gates";

// Enhanced structured data with more details
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Custom Gate Design & Installation",
  provider: {
    "@type": "Organization",
    name: "Gulf Builders",
    address: {
      "@type": "PostalAddress",
      streetAddress: "70 University Ave",
      addressLocality: "Toronto",
      addressRegion: "ON",
      postalCode: "M5J 2M4",
      addressCountry: "CA",
    },
    telephone: "+1 (647) 123-4567",
  },
  description: description,
  serviceType: "Gate Installation",
};

// Team members for authority and trust signals
const teamMembers = [
  {
    name: "Alexander Chen",
    role: "Gate Design Specialist",
    credentials: "Certified Metal Fabricator",
    experience:
      "12+ years designing and installing custom gates for residential estates and commercial properties",
    specialties: ["Automated Driveway Gates", "Decorative Entry Gates", "Security Gates"],
    icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6",
  },
  {
    name: "Sophia Martinez",
    role: "Gate Automation Expert",
    credentials: "Certified Gate Automation Technician",
    experience: "9+ years specializing in smart gate systems and access control integration",
    specialties: ["Smart Gate Systems", "Access Control", "Gate Safety"],
    icon: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z",
  },
];

// Service features with icons
const serviceFeatures = [
  {
    title: "Custom Design",
    description: "Personalized gate designs that complement your property's architectural style",
    icon: "M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z",
  },
  {
    title: "Multiple Materials",
    description: "Options including wrought iron, aluminum, steel, wood, and composite materials",
    icon: "M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4",
  },
  {
    title: "Automation Systems",
    description: "Smart gate solutions with keypads, remote controls, and smartphone integration",
    icon: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z",
  },
  {
    title: "Professional Installation",
    description: "Expert installation with proper foundation and secure mounting techniques",
    icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065z",
  },
