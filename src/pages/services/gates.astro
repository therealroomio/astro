// Project process steps
const processSteps = [
  {
    step: "01",
    title: "Initial Consultation",
    description:
      "Discussion of your design preferences, security requirements, and site assessment.",
    icon: "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
  },
  {
    step: "02",
    title: "Custom Design",
    description:
      "Creation of detailed design plans with material selection and automation options.",
    icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z",
  },
  {
    step: "03",
    title: "Fabrication",
    description: "Precision fabrication of your custom gate according to design specifications.",
    icon: "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01",
  },
  {
    step: "04",
    title: "Professional Installation",
    description:
      "Expert installation including foundation work, secure mounting, and automation setup.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
];

// FAQs about gates
const faqs = [
  {
    question: "What types of gates do you offer?",
    answer:
      "We offer a comprehensive range of gate types including driveway gates, pedestrian gates, garden gates, security gates, and privacy gates. Each can be customized in various styles such as modern, traditional, ornamental, or minimalist to complement your property's aesthetic. We work with multiple materials including wrought iron, aluminum, steel, wood, and composite materials.",
  },
  {
    question: "Can my gate be automated?",
    answer:
      "Yes, we offer automation for all our gate installations. Options include swing gate operators, sliding gate systems, underground operators, and various access control methods such as keypads, remote controls, smartphone apps, intercoms, and card readers. Our automation systems can be integrated with your existing home security or smart home systems for seamless operation.",
  },
  {
    question: "How long does it take to install a custom gate?",
    answer:
      "The timeline for a custom gate project typically ranges from 2-6 weeks. Design and approval usually takes 1-2 weeks, fabrication requires 1-3 weeks depending on complexity and materials, and installation takes 1-3 days. Factors that can affect the timeline include material availability, design complexity, automation requirements, and site preparation needs.",
  },
  {
    question: "What maintenance is required for gates?",
    answer:
      "Maintenance requirements vary by material and automation system. Generally, we recommend annual inspections of hinges, latches, and automated components. Metal gates should be checked for rust and repainted as needed (typically every 3-5 years). Wooden gates may require staining or sealing every 1-2 years. Automated systems should have their sensors and safety features tested every 6 months. We offer maintenance plans to ensure your gate remains in optimal condition.",
  },
];
---

<Layout>
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>

  <Navbar />
  <main class="relative" role="main" aria-labelledby="main-heading">
    <!-- Hero Section -->
    <section
      class="relative overflow-hidden bg-white py-32 sm:py-40"
      aria-labelledby="hero-heading"
    >
      <BlurFade client:load delay={0.2}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="grid min-h-[70vh] gap-12 lg:grid-cols-2 lg:gap-8">
            <div class="flex flex-col justify-center">
              <h1
                id="main-heading"
                class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"
              >
                Custom Gate Design & Installation
              </h1>
              <p class="mt-6 text-lg leading-8 text-gray-600">
                Enhance your property's security, privacy, and curb appeal with our custom-designed
                gates. From elegant entryways to secure perimeters, we create beautiful, functional
                gates for every application.
              </p>
              <div class="mt-8 flex gap-4">
                <a
                  href="#contact"
                  class="rounded-xl bg-primary px-8 py-4 text-base font-semibold text-white shadow-sm hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                >
                  Start Your Project
                </a>
                <a
                  href="#process"
                  class="rounded-xl bg-gray-50 px-8 py-4 text-base font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300"
                >
                  Learn More
                </a>
              </div>
            </div>
            <div class="relative flex items-center">
              <div class="aspect-[4/3] overflow-hidden rounded-2xl bg-gray-50">
                <img
                  src="/images/gates-hero.jpg"
                  alt="Custom gate design and installation by Gulf Builders"
                  class="h-full w-full object-cover"
                  width="800"
                  height="600"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-50 py-24 sm:py-32">
      <BlurFade client:load delay={0.3}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Comprehensive Gate Solutions
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              From design to installation, we provide complete gate solutions tailored to your
              property and preferences.
            </p>
          </div>
          <div class="mt-16 grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
            {
              serviceFeatures.map((feature, index) => (
                <BlurFade client:load delay={0.4 + index * 0.1}>
                  <div class="relative">
                    <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10">
                      <svg
                        class="h-6 w-6 text-primary"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d={feature.icon}
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">{feature.title}</h3>
                    <p class="mt-2 text-base text-gray-600">{feature.description}</p>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Process Section -->
    <section id="process" class="relative bg-white py-24 sm:py-32">
      <div class="absolute inset-0 -z-10">
        <div class="absolute inset-y-0 left-0 -z-10 w-full overflow-hidden bg-gray-50">
          <div class="absolute -left-[40%] top-0 h-[1000px] w-[80%] -rotate-12 bg-white"></div>
        </div>
      </div>

      <BlurFade client:load delay={0.4}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              Our Gate Design Process
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              A systematic approach to create beautiful, functional gates that enhance your
              property's security and style.
            </p>
          </div>

          <div class="mt-16 lg:mt-24">
            <div class="relative">
              <div
                class="absolute left-1/2 top-0 hidden h-full w-0.5 -translate-x-1/2 bg-gray-200 lg:block"
              >
              </div>
              <div class="space-y-16 lg:space-y-32">
                {
                  processSteps.map((step, index) => (
                    <BlurFade client:load delay={0.5 + index * 0.1}>
                      <div
                        class={`relative flex flex-col gap-8 lg:flex-row ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}
                      >
                        <div class="absolute left-1/2 top-0 hidden h-6 w-6 -translate-x-1/2 lg:block">
                          <div class="h-full w-full rounded-full border-4 border-white bg-primary shadow-lg" />
                        </div>
                        <div class="flex-1 lg:w-1/2">
                          <div class="group relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 transition-all hover:shadow-lg">
                            <div class="mb-6 flex items-center gap-4">
                              <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary text-xl font-bold text-white shadow-sm">
                                {step.step}
                              </div>
                              <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
                                <svg
                                  class="h-6 w-6 text-primary"
                                  fill="none"
                                  viewBox="0 0 24 24"
                                  stroke="currentColor"
                                >
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d={step.icon}
                                  />
                                </svg>
                              </div>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900">{step.title}</h3>
                            <p class="mt-2 text-base leading-relaxed text-gray-600">
                              {step.description}
                            </p>
                          </div>
                        </div>
                        <div class="hidden lg:block lg:w-1/2" />
                      </div>
                    </BlurFade>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- FAQ Section -->
    <section class="bg-gray-50 py-24 sm:py-32" aria-labelledby="faq-heading">
      <BlurFade client:load delay={0.7}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              id="faq-heading"
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              Frequently Asked Questions
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Find answers to common questions about our gate design and installation services.
            </p>
          </div>

          <div class="mt-16 grid grid-cols-1 gap-2 space-y-4">
            {
              faqs.map((faq, index) => (
                <BlurFade client:load delay={0.8 + index * 0.1}>
                  <Accordion client:load title={faq.question}>
                    <div class="text-base leading-relaxed text-gray-600">
                      <p>{faq.answer}</p>
                    </div>
                  </Accordion>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Team Section -->
    <section class="bg-white py-24 sm:py-32">
      <BlurFade client:load delay={0.6}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2
              class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl"
            >
              Meet Our Gate Experts
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Our team of specialists brings years of experience in gate design, fabrication, and
              automation.
            </p>
          </div>
          <div class="mt-16 grid gap-8 sm:grid-cols-2">
            {
              teamMembers.map((member, index) => (
                <BlurFade client:load delay={0.7 + index * 0.1}>
                  <div class="group relative overflow-hidden rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 transition-all hover:shadow-lg">
                    <div class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top_right,_theme(colors.primary.50),_transparent_40%)] opacity-0 transition-opacity group-hover:opacity-100" />

                    <div class="flex items-start gap-4">
                      <div class="flex h-16 w-16 flex-shrink-0 items-center justify-center rounded-xl bg-primary/10">
                        <svg
                          class="h-8 w-8 text-primary"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d={member.icon}
                          />
                        </svg>
                      </div>

                      <div class="flex-1">
                        <h3 class="text-xl font-semibold text-gray-900">{member.name}</h3>
                        <p class="mt-1 text-sm font-medium text-primary">{member.role}</p>
                        <p class="mt-2 text-sm text-gray-600">{member.credentials}</p>
                        <p class="mt-1 text-sm text-gray-600">{member.experience}</p>

                        <div class="mt-4 flex flex-wrap gap-2">
                          {member.specialties.map((specialty) => (
                            <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                              {specialty}
                            </span>
                          ))}
                        </div>
                      </div>
                    </div>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- CTA Section -->
    <section id="contact" class="bg-white py-24 sm:py-32">
      <BlurFade client:load delay={0.8}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="relative mx-auto max-w-2xl rounded-3xl bg-primary px-8 py-16 text-center">
            <div
              class="absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top_right,_theme(colors.primary.400),_transparent_40%),radial-gradient(circle_at_bottom_left,_theme(colors.primary.800),_transparent_40%)] opacity-20"
            >
            </div>
            <h2 class="text-2xl font-semibold text-white">Ready to Enhance Your Property?</h2>
            <p class="mt-4 text-lg text-white/80">
              Contact us today for a free consultation and let's design the perfect gate for your
              home or business.
            </p>
            <div class="mt-8 flex justify-center gap-4">
              <a
                href="/contact"
                class="rounded-xl bg-white px-8 py-4 text-base font-semibold text-primary shadow-sm transition-colors hover:bg-white/90 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary"
              >
                Schedule Consultation
              </a>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>
  </main>
  <Footer />
</Layout>

