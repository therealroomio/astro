---

<Layout>
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/luxury-renovation-showcase.jpg" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Additional SEO Meta Tags -->
    <meta name="author" content="Gulf Builders" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://gulfbuilders.ca/services/luxury-renovation" />

    <!-- Enhanced accessibility meta tags -->
    <meta name="theme-color" content="#ffffff" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  </head>

  <Navbar />
  <main class="relative" role="main" aria-labelledby="main-heading">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-white py-32 sm:py-40" aria-labelledby="hero-heading">
      <BlurFade client:load delay={0.2}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="grid min-h-[70vh] gap-12 lg:grid-cols-2 lg:gap-8">
            <div class="flex flex-col justify-center">
              <h1 id="main-heading" class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
                Luxury Renovation Excellence
              </h1>
              <p class="mt-6 text-lg leading-8 text-gray-600">
                Transform your property into an architectural masterpiece. Our master craftsmen bring over
                20 years of experience in creating exceptional luxury renovations that blend heritage charm
                with modern sophistication.
              </p>
              <div class="mt-8 flex gap-4">
                <a
                  href="#contact"
                  class="rounded-xl bg-primary px-8 py-4 text-base font-semibold text-white shadow-sm hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                >
                  Start Your Project
                </a>
                <a
                  href="#process"
                  class="rounded-xl bg-gray-50 px-8 py-4 text-base font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300"
                >
                  Learn More
                </a>
              </div>
            </div>
            <div class="relative flex items-center">
              <div class="aspect-[4/3] overflow-hidden rounded-2xl bg-gray-50">
                <img
                  src="/images/luxury-renovation-hero.jpg"
                  alt="Luxury renovation project showcase"
                  class="h-full w-full object-cover"
                  width="800"
                  height="600"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-50 py-24 sm:py-32">
      <BlurFade client:load delay={0.3}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
              Comprehensive Renovation Services
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Our luxury renovation services encompass every aspect of transforming your space,
              from heritage restoration to modern luxury integration.
            </p>
          </div>
          <div class="mt-16 grid gap-12 sm:grid-cols-2 lg:grid-cols-4">
            {
              serviceFeatures.map((feature, index) => (
                <BlurFade client:load delay={0.4 + index * 0.1}>
                  <div class="relative">
                    <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10">
                      <svg
                        class="h-6 w-6 text-primary"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d={feature.icon}
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900">{feature.title}</h3>
                    <p class="mt-2 text-base text-gray-600">{feature.description}</p>
                  </div>
                </BlurFade>
              ))
            }
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Process Section -->
    <section id="process" class="relative bg-white py-24 sm:py-32">
      <!-- Background Pattern -->
      <div class="absolute inset-0 -z-10">
        <div class="absolute inset-y-0 left-0 -z-10 w-full overflow-hidden bg-gray-50">
          <div class="absolute -left-[40%] top-0 h-[1000px] w-[80%] -rotate-12 bg-white"></div>
        </div>
      </div>

      <BlurFade client:load delay={0.4}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl">
              Our Renovation Process
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              A meticulous approach to bringing your vision to life, ensuring every detail is
              perfectly executed with master craftsmanship.
            </p>
          </div>

          <div class="mt-16 lg:mt-24">
            <div class="relative">
              <!-- Timeline Line -->
              <div class="absolute left-1/2 top-0 hidden h-full w-0.5 -translate-x-1/2 bg-gray-200 lg:block"></div>

              <!-- Process Steps -->
              <div class="space-y-16 lg:space-y-32">
                {processSteps.map((step, index) => (
                  <BlurFade client:load delay={0.5 + index * 0.1}>
                    <div class={`relative flex flex-col gap-8 lg:flex-row ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
                      <!-- Timeline Dot -->
                      <div class="absolute left-1/2 top-0 hidden h-6 w-6 -translate-x-1/2 lg:block">
                        <div class="h-full w-full rounded-full border-4 border-white bg-primary shadow-lg"></div>
                      </div>

                      <!-- Content -->
                      <div class="flex-1 lg:w-1/2">
                        <div class="group relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5 transition-all hover:shadow-lg">
                          <div class="mb-6 flex items-center gap-4">
                            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary text-xl font-bold text-white shadow-sm">
                              {step.step}
                            </div>
                            <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10">
                              <svg
                                class="h-6 w-6 text-primary"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d={step.icon}
                                />
                              </svg>
                            </div>
                          </div>
                          <h3 class="text-xl font-semibold text-gray-900">{step.title}</h3>
                          <p class="mt-2 text-base leading-relaxed text-gray-600">{step.description}</p>
                          
                          <!-- Decorative Arrow -->
                          <div class="absolute right-8 top-8 text-primary opacity-0 transition-opacity group-hover:opacity-100">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                          </div>
                        </div>
                      </div>

                      <!-- Spacer for alternating layout -->
                      <div class="hidden lg:block lg:w-1/2"></div>
                    </div>
                  </BlurFade>
                ))}
              </div>
            </div>
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Testimonials Section -->
    <section class="bg-white py-24 sm:py-32" aria-labelledby="testimonials-heading">
      <BlurFade client:load delay={0.6}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 id="testimonials-heading" class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl">
              What Our Clients Say
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
              Read about real experiences from our satisfied clients across Toronto.
            </p>
          </div>

          <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {testimonials.map((testimonial, index) => (
              <BlurFade client:load delay={0.7 + index * 0.1}>
                <div class="relative rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5">
                  <!-- Rating Stars -->
                  <div class="mb-4 flex text-primary" role="img" aria-label={`${testimonial.rating} out of 5 stars`}>
                    {Array.from({ length: testimonial.rating }).map(() => (
                      <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20" aria-hidden="true">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>

                  <blockquote class="mb-6 text-base italic text-gray-600">"{testimonial.quote}"</blockquote>

                  <div class="mt-4">
                    <p class="font-semibold text-gray-900">{testimonial.author}</p>
                    <p class="text-sm text-gray-600">{testimonial.role}</p>
                    <p class="mt-1 text-sm font-medium text-primary">{testimonial.project}</p>
                    <div class="mt-2 flex flex-wrap gap-2">
                      <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                        {testimonial.projectDetails}
                      </span>
                      <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                        {testimonial.location}
                      </span>
                      <span class="inline-flex items-center rounded-full bg-primary/5 px-3 py-1 text-xs font-medium text-primary">
                        {testimonial.date}
                      </span>
                    </div>
                  </div>
                </div>
              </BlurFade>
            ))}
          </div>
        </div>
      </BlurFade>
    </section>

    <!-- Team Section -->
    <section class="bg-gray-50 py-24 sm:py-32">
      <BlurFade client:load delay={0.6}>
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl text-center">
            <h2 class="bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl">
              Meet Our Renovation Experts
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">
