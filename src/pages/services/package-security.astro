---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import BlurFade from "../../components/magicui/blur-fade";
import Accordion from "../../components/ui/Accordion";

// SEO metadata optimized for package security services
const title = "Package Security Solutions | Gulf Builders";
const description =
  "Gulf Builders provides comprehensive package security solutions to protect deliveries at residential and commercial properties. Our secure package lockers, drop boxes, and smart delivery systems prevent theft and ensure your parcels remain safe.";
const keywords =
  "package security, parcel protection, package lockers, delivery security, smart package boxes, package theft prevention, Toronto package security, secure deliveries";

// Enhanced structured data with more details
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Package Security Solutions",
  provider: {
    "@type": "Organization",
    name: "Gulf Builders",
    address: {
      "@type": "PostalAddress",
      streetAddress: "70 University Ave",
      addressLocality: "Toronto",
      addressRegion: "ON",
      postalCode: "M5J 2M4",
      addressCountry: "CA",
    },
    telephone: "+1 (647) 123-4567",
  },
  description: description,
  serviceType: "Package Security",
};

// Team members for authority and trust signals
const teamMembers = [
  {
    name: "Nathan Reed",
    role: "Package Security Specialist",
    credentials: "Certified Security Professional (CSP)",
    experience: "10+ years designing secure package delivery solutions for properties of all sizes",
    specialties: ["Smart Lockers", "Access Control Systems", "Security Integration"],
    icon: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z",
  },
  {
    name: "Olivia Patel",
    role: "Smart Home Integration Expert",
