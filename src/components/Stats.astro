---
const stats = [
	{ number: "8k", label: "Projects Completed" },
	{ number: "31", label: "Professional Awards" },
	{ number: "12k", label: "Happy Clients" },
	{ number: "97%", label: "Success Rate" },
];
---

<div class="bg-primary py-20">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="grid grid-cols-2 gap-8 text-center md:grid-cols-4">
			{
				stats.map((stat) => (
					<div>
						<div class="mb-2 text-4xl font-bold text-white">{stat.number}</div>
						<div class="text-sm text-muted-foreground">{stat.label}</div>
					</div>
				))
			}
		</div>
	</div>
</div>
