---
import BlurFade from "./magicui/blur-fade";
import { BentoGrid, BentoGridItem } from "./magicui/bento-grid";

const services = [
	{
		title: "Interior Design",
		description: "Creating stunning, functional spaces that reflect your unique style and needs.",
		icon: "🎨",
		delay: 0.1,
		className: "md:col-span-2"
	},
	{
		title: "Luxury Renovation",
		description: "Transforming existing spaces into modern, beautiful environments with premium finishes.",
		icon: "✨",
		delay: 0.2
	},
	{
		title: "Custom Builds",
		description: "Building your dream home from the ground up with attention to every detail.",
		icon: "🏠",
		delay: 0.3,
		className: "md:col-span-2"
	},
	{
		title: "Project Management",
		description: "Ensuring your project runs smoothly from concept to completion.",
		icon: "📋",
		delay: 0.4
	},
	{
		title: "Smart Home Integration",
		description: "Incorporating cutting-edge home automation and smart technology solutions.",
		icon: "🤖",
		delay: 0.5,
		className: "md:col-span-2"
	},
	{
		title: "Sustainable Design",
		description: "Eco-friendly solutions and sustainable materials for environmentally conscious living.",
		icon: "🌱",
		delay: 0.6
	},
	{
		title: "Commercial Spaces",
		description: "Designing and building professional environments that inspire productivity.",
		icon: "🏢",
		delay: 0.7,
		className: "md:row-span-2"
	},
	{
		title: "Retail Design",
		description: "Creating engaging retail spaces that enhance customer experience and drive sales.",
		icon: "🛍️",
		delay: 0.8
	},
	{
		title: "Luxury Pools & Spas",
		description: "Designing and installing custom pools and spa retreats for ultimate relaxation.",
		icon: "🏊‍♂️",
		delay: 0.9,
		className: "md:col-span-2"
	},
	{
		title: "Outdoor Living",
		description: "Crafting luxurious outdoor spaces for entertainment and relaxation.",
		icon: "🌳",
		delay: 1.0
	},
	{
		title: "Restaurant Design",
		description: "Specialized design solutions for restaurants, bars, and hospitality spaces.",
		icon: "🍽️",
		delay: 1.1,
		className: "md:col-span-2"
	},
	{
		title: "Corporate Offices",
		description: "Modern office designs that balance professionalism with employee comfort.",
		icon: "💼",
		delay: 1.2
	}
];
---

<section id="services" class="relative py-20 bg-background">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8">
		<BlurFade client:load inView>
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl mb-4">
					Our Services
				</h2>
				<p class="text-lg text-foreground/70 max-w-2xl mx-auto">
					Comprehensive solutions for residential, commercial, and luxury projects.
				</p>
			</div>
		</BlurFade>

		<BentoGrid client:load>
			{
				services.map(({ title, description, icon, delay, className }) => (
					<BlurFade client:load delay={delay} inView>
						<BentoGridItem
							client:load
							title={title}
							description={description}
							icon={icon}
							className={className}
						/>
					</BlurFade>
				))
			}
		</BentoGrid>

		<BlurFade client:load delay={1.3} inView>
			<div class="mt-16 text-center">
				<a
					href="/contact"
					class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-white bg-primary hover:bg-primary/90 transition-colors duration-200"
				>
					Start Your Project
				</a>
			</div>
		</BlurFade>
	</div>
</section>
